//- mixins는 데이터를 받을 수 있는 partials
mixin video(video)
    div
        h4
            a(href=`/videos/${video.id}`)=video.title
        ul 
            li #{video.rating}/5
            li #{video.comments} comments
            li Posted #{video.createdAt}
            li #{video.views} #{video.views === 1 ? "view" : "views"}